<div class="container mt-4">
    <script>
        const urlParams = new URLSearchParams(window.location.search);
        if (urlParams.get('success')) {
            document.write('<div class="alert alert-success">Twoja sugestia została pomyślnie dodana!</div>');
        }
    </script>

    <% if (user) { %>
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1>Lista Sugestii "Tips"</h1>
        </div>

        <div class="table-responsive">
            <table class="table table-striped align-middle">
                <thead class="table-dark">
                    <tr>
                        <th>Data</th>
                        <th>URL</th>
                        <th>Skrócony opis</th>
                        <th>Status</th>
                        <th>Akcje</th>
                    </tr>
                </thead>
                <tbody>
                    <% tips.forEach(tip => { %>
                        <tr>
                            <td><%= tip.createdAt.toLocaleDateString('pl-PL') %></td>
                            <td>
                                <a href="<%= tip.url %>" target="_blank">
                                    <%= tip.url.length > 50 ? tip.url.substring(0, 50) + '...' : tip.url %>
                                </a>
                            </td>
                            <td><%= tip.description.length > 100 ? tip.description.substring(0, 100) + '...' : tip.description %></td>
                            <td><span class="badge bg-success"><%= tip.status.toUpperCase() %></span></td>
                            <td>
                                <a href="/tips/<%= tip._id %>" class="btn btn-sm btn-info text-white">Szczegóły</a>
                                <form action="/tips/<%= tip._id %>/delete" method="POST" class="d-inline" onsubmit="return confirm('Czy na pewno chcesz usunąć?');">
                                    <button type="submit" class="btn btn-sm btn-danger">Usuń</button>
                                </form>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
            <% if(tips.length === 0) { %>
                <p class="text-center mt-3">Brak zgłoszonych sugestii.</p>
            <% } %>
        </div>

    <% } else { %>
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card shadow-sm">
                    <div class="card-header bg-primary text-white">
                        <h4 class="mb-0">Zgłoś nową okazję (Tip)</h4>
                    </div>
                    <div class="card-body">
                        <form action="/tips" method="POST">
                            <div class="mb-3">
                                <label for="url" class="form-label">URL strony z okazją *</label>
                                <input type="url" class="form-control" id="url" name="url" required placeholder="https://...">
                            </div>
                            <div class="mb-3">
                                <label for="description" class="form-label">Opis okazji * (max 500 znaków)</label>
                                <textarea class="form-control" id="description" name="description" rows="4" maxlength="500" required></textarea>
                            </div>
                            <div class="mb-3">
                                <label for="email" class="form-label">Twój Email (opcjonalnie)</label>
                                <input type="email" class="form-control" id="email" name="email" placeholder="jan@example.com">
                            </div>
                            <button type="submit" class="btn btn-success w-100">Prześlij sugestię</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    <% } %>
</div>