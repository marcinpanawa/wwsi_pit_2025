<div class="album py-5">
    <div class="no-container">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1>Deals</h1>
            <% if (locals.user) { %>
                <a href="/deals/create" class="btn btn-success">Create New Deal</a>
                <% } %>
        </div>
    </div>

<% if (!deals || deals.length===0) { %>
    <p class="text-center">No deals found.</p>
    <% } else { %>
        <div class="album py-3 bg-light">
            <div class="container">
                <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
                    
                    <% deals.forEach(deal => { %>
                    <div class="col">
                        <div class="card shadow-sm h-100">
                            
                            <a href="/deals/<%= deal._id %>" class="text-decoration-none text-dark">
                                <% 
                                    // Zauwa≈ºy≈Çem, ≈ºe jest problem z jednym z obrazk√≥w i doda≈Çem obrazek "brak zdjƒôcia", aby nie psuƒá layoutu
                                    const fallbackImage = "https://placehold.co/600x400/png?text=Brak+Zdjecia"; 
                                %>
                                <% if (deal.imageUrl) { %>
                                    <img src="<%= deal.imageUrl ? deal.imageUrl : fallbackImage %>" 
                                        class="card-img-top" 
                                        width="100%" 
                                        height="225" 
                                        style="object-fit: cover;" 
                                        alt="<%= deal.title %>"
                                        onerror="this.onerror=null; this.src='<%= fallbackImage %>';"
                                    >
                                <% } else { %>
                                    <svg class="bd-placeholder-img card-img-top" width="100%" height="225" xmlns="http://www.w3.org/2000/svg" role="img" aria-label="Placeholder: Thumbnail" preserveAspectRatio="xMidYMid slice" focusable="false">
                                        <title>Placeholder</title>
                                        <rect width="100%" height="100%" fill="#55595c"></rect>
                                        <text x="50%" y="50%" fill="#eceeef" dy=".3em" text-anchor="middle"><%= deal.category %></text>
                                    </svg>
                                <% } %>
                            </a>

                            <div class="card-body d-flex flex-column">
                                <div class="d-flex justify-content-between align-items-start mb-2">
                                    <h5 class="card-title text-truncate" style="max-width: 70%;">
                                        <a href="/deals/<%= deal._id %>" class="text-decoration-none text-dark"><%= deal.title %></a>
                                    </h5>
                                    <span class="badge bg-primary"><%= deal.category %></span>
                                </div>

                                <div class="mb-3">
                                    <% if (deal.score > 10) { %>
                                        <span class="badge rounded-pill bg-danger">Hot üî•</span>
                                    <% } else if (deal.score < -10) { %>
                                        <span class="badge rounded-pill bg-info text-dark">Cold ‚ùÑÔ∏è</span>
                                    <% } else { %>
                                        <span class="badge rounded-pill bg-secondary">Neutral</span>
                                    <% } %>
                                </div>

                                <div class="d-flex justify-content-between align-items-center mt-auto">
                                    
                                    <div class="btn-group" role="group" aria-label="Vote">
                                        <form action="/deals/<%= deal._id %>/downvote" method="POST" class="d-inline">
                                            <button type="submit" class="btn btn-sm btn-outline-secondary rounded-start">
                                                <i class="bi bi-dash-lg">-</i> 
                                            </button>
                                        </form>

                                        <button type="button" class="btn btn-sm btn-outline-secondary" disabled style="min-width: 40px;">
                                            <strong><%= deal.score %></strong>
                                        </button>

                                        <form action="/deals/<%= deal._id %>/upvote" method="POST" class="d-inline">
                                            <button type="submit" class="btn btn-sm btn-outline-secondary rounded-end">
                                                <i class="bi bi-plus-lg">+</i>
                                            </button>
                                        </form>
                                    </div>

                                    <a href="/deals/<%= deal._id %>" class="btn btn-sm btn-primary">Details</a>
                                </div>
                            </div>
                        </div>
                    </div>
                    <% }) %>

                </div>
            </div>
        </div>
    <% } %>
