<div class="album py-5">
    <div class="no-container">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1>Deals</h1>
            <% if (locals.user) { %>
                <a href="/deals/create" class="btn btn-success">Create New Deal</a>
                <% } %>
        </div>
    </div>


    <% if (!deals || deals.length===0) { %>
        <p class="text-center">No deals found.</p>
        <% } else { %>
            <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
                <% deals.forEach(deal=> { %>
                    <div class="col">
                        <div class="card shadow-sm">
                            <a href="/deals/<%= deal._id %>" class="text-decoration-none">
                                <div class="position-relative">
                                    <% if (deal.imageUrl) { %>
                                        <img src="<%= deal.imageUrl %>" class="card-img-top deal-image"
                                            alt="<%= deal.title %>"
                                            onerror="this.style.display='none'; this.nextElementSibling.style.display='block';">
                                        <svg class="bd-placeholder-img card-img-top" width="100%" height="225"
                                            xmlns="http://www.w3.org/2000/svg" role="img" aria-label="Placeholder"
                                            preserveAspectRatio="xMidYMid slice" focusable="false"
                                            style="display:none;">
                                            <title>Placeholder</title>
                                            <rect width="100%" height="100%" fill="#55595c" />
                                            <text x="50%" y="50%" fill="#eceeef" dy=".3em"
                                                text-anchor="middle">Thumbnail</text>
                                        </svg>
                                        <% } else { %>
                                            <svg class="bd-placeholder-img card-img-top" width="100%" height="225"
                                                xmlns="http://www.w3.org/2000/svg" role="img" aria-label="Placeholder"
                                                preserveAspectRatio="xMidYMid slice" focusable="false">
                                                <title>Placeholder</title>
                                                <rect width="100%" height="100%" fill="#55595c" />
                                                <text x="50%" y="50%" fill="#eceeef" dy=".3em"
                                                    text-anchor="middle">Thumbnail</text>
                                            </svg>
                                            <% } %>
                                                <div class="position-absolute top-0 end-0 m-2">
                                                    <% if (deal.score> 10) { %>
                                                        <span class="badge bg-danger fs-6 px-3 py-2">Hot üî•</span>
                                                        <% } else if (deal.score < -10) { %>
                                                            <span class="badge bg-info text-dark fs-6 px-3 py-2">Cold
                                                                ‚ùÑÔ∏è</span>
                                                            <% } else { %>
                                                                <span
                                                                    class="badge bg-secondary fs-6 px-3 py-2">Neutral</span>
                                                                <% } %>
                                                </div>
                                                <div class="position-absolute top-0 start-0 m-2">
                                                    <span class="badge bg-dark fs-6 px-3 py-2">
                                                        <%= deal.category %>
                                                    </span>
                                                </div>
                                </div>
                            </a>
                            <div class="card-body">
                                <h5 class="card-title">
                                    <%= deal.title %>
                                </h5>
                                <p class="card-text">
                                    <%= deal.description %>
                                </p>
                                <div class="d-flex justify-content-between align-items-center">
                                    <div class="btn-group">
                                        <a href="/deals/<%= deal._id %>"
                                            class="btn btn-sm btn-outline-secondary">View</a>
                                    </div>

                                    <!-- Vote Box -->
                                    <div class="d-flex align-items-center">
                                        <form action="/deals/<%= deal._id %>/vote" method="POST" class="d-inline">
                                            <input type="hidden" name="vote" value="up">
                                            <button type="submit"
                                                class="btn btn-link p-0 text-decoration-none vote-btn">
                                                <i class="bi bi-caret-up-fill fs-5"></i>
                                            </button>
                                        </form>
                                        <% let tempClass='neutral' ; if (deal.score> 10) tempClass = 'hot';
                                            else if (deal.score < -10) tempClass='cold' ; %>
                                                <span class="temperature <%= tempClass %>">
                                                    <%= deal.score %>¬∞
                                                </span>
                                                <form action="/deals/<%= deal._id %>/vote" method="POST"
                                                    class="d-inline">
                                                    <input type="hidden" name="vote" value="down">
                                                    <button type="submit"
                                                        class="btn btn-link p-0 text-decoration-none vote-btn">
                                                        <i class="bi bi-caret-down-fill fs-5"></i>
                                                    </button>
                                                </form>
                                    </div>

                                    <small class="text-muted">
                                        <% const now=new Date(); const added=new Date(deal.dateAdded); const diffMs=now
                                            - added; const diffMins=Math.floor(diffMs / 60000); const
                                            diffHours=Math.floor(diffMs / 3600000); const diffDays=Math.floor(diffMs /
                                            86400000); let timeAgo; if (diffMins < 1) timeAgo='just now' ; else if
                                            (diffMins < 60) timeAgo=diffMins + ' mins' ; else if (diffHours < 24)
                                            timeAgo=diffHours + ' hours' ; else timeAgo=diffDays + ' days' ; %>
                                            <%= timeAgo %>
                                    </small>
                                </div>
                            </div>
                        </div>
                    </div>
                    <% }) %>
            </div>
            <% } %>
</div>
</div>