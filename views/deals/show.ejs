<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card mb-4 <%= deal.score > 10 ? 'border-danger' : (deal.score < -10 ? 'border-info' : '') %>">
            <% if (deal.imageUrl) { %>
                <img 
                    src="<%= deal.imageUrl || 'https://images.unsplash.com/photo-1500530855697-b586d89ba3ee?auto=format&fit=crop&w=500&q=60' %>"
                    onerror="this.onerror=null; this.src='https://images.unsplash.com/photo-1500530855697-b586d89ba3ee?auto=format&fit=crop&w=500&q=60';"
                    class="card-img-top"
                    alt="<%= deal.title %>"
                    style="max-height: 400px; object-fit: cover;">

                <% } %>
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-start">
                            <h2 class="card-title">
                                <%= deal.title %>
                            </h2>
                            <div>
                                <% if (deal.score> 10) { %>
                                    <span class="badge bg-danger fs-5">Hot üî•</span>
                                    <% } else if (deal.score < -10) { %>
                                        <span class="badge bg-info text-dark fs-5">Cold ‚ùÑÔ∏è</span>
                                        <% } else { %>
                                            <span class="badge bg-secondary fs-5">Neutral</span>
                                            <% } %>
                                                <span class="badge bg-primary fs-5 ms-2">
                                                    <%= deal.score %> pts
                                                </span>
                            </div>
                        </div>

                        <h5 class="text-muted mb-3">
                            <%= deal.category %>
                        </h5>

                        <p class="card-text lead">
                            <%= deal.description %>
                        </p>

                        <hr>

                        <div class="d-flex justify-content-between align-items-center">
                            <small class="text-muted">Added on <%= new Date(deal.dateAdded).toLocaleDateString() %>
                                    </small>
                            <a href="/deals" class="btn btn-outline-secondary">Back to Deals</a>
                        </div>
                    </div>
        </div>
    </div>
</div>