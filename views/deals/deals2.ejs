<div class="album py-5">
    <div class="no-container">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1>Deals (Fetch API)</h1>
            <% if (locals.user) { %>
                <a href="/deals/create" class="btn btn-success">Create New Deal</a>
                <% } %>
        </div>
    </div>

    <div id="deals-container" class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
        <div class="col-12 text-center">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
            <p>Loading deals...</p>
        </div>
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', async () => {
        const container = document.getElementById('deals-container');

        function getTimeAgo(dateString) {
            const now = new Date();
            const added = new Date(dateString);
            const diffMs = now - added;
            const diffMins = Math.floor(diffMs / 60000);
            const diffHours = Math.floor(diffMs / 3600000);
            const diffDays = Math.floor(diffMs / 86400000);

            if (diffMins < 1) return 'just now';
            if (diffMins < 60) return diffMins + ' mins';
            if (diffHours < 24) return diffHours + ' hours';
            return diffDays + ' days';
        }

        function getTemperatureClass(score) {
            if (score > 10) return 'hot';
            if (score < -10) return 'cold';
            return 'neutral';
        }

        try {
            const response = await fetch('/deals/json');
            if (!response.ok) throw new Error('Failed to fetch deals');
            const deals = await response.json();

            if (deals.length === 0) {
                container.innerHTML = '<div class="col-12 text-center"><p>No deals found.</p></div>';
                return;
            }

            container.innerHTML = '';
            deals.forEach(deal => {
                const tempClass = getTemperatureClass(deal.score);
                const timeAgo = getTimeAgo(deal.dateAdded);

                let badgeHtml = '';
                if (deal.score > 10) {
                    badgeHtml = '<span class="badge bg-danger fs-6 px-3 py-2">Hot üî•</span>';
                } else if (deal.score < -10) {
                    badgeHtml = '<span class="badge bg-info text-dark fs-6 px-3 py-2">Cold ‚ùÑÔ∏è</span>';
                } else {
                    badgeHtml = '<span class="badge bg-secondary fs-6 px-3 py-2">Neutral</span>';
                }

                const dealCard = `
                    <div class="col">
                        <div class="card shadow-sm">
                            <a href="/deals/${deal._id}" class="text-decoration-none">
                                <div class="position-relative">
                                    ${deal.imageUrl ? `
                                        <img src="${deal.imageUrl}" class="card-img-top deal-image"
                                            alt="${deal.title}"
                                            onerror="this.style.display='none'; this.nextElementSibling.style.display='block';">
                                        <svg class="bd-placeholder-img card-img-top" width="100%" height="225"
                                            xmlns="http://www.w3.org/2000/svg" role="img" aria-label="Placeholder"
                                            preserveAspectRatio="xMidYMid slice" focusable="false"
                                            style="display:none;">
                                            <title>Placeholder</title>
                                            <rect width="100%" height="100%" fill="#55595c" />
                                            <text x="50%" y="50%" fill="#eceeef" dy=".3em"
                                                text-anchor="middle">Thumbnail</text>
                                        </svg>
                                    ` : `
                                        <svg class="bd-placeholder-img card-img-top" width="100%" height="225"
                                            xmlns="http://www.w3.org/2000/svg" role="img" aria-label="Placeholder"
                                            preserveAspectRatio="xMidYMid slice" focusable="false">
                                            <title>Placeholder</title>
                                            <rect width="100%" height="100%" fill="#55595c" />
                                            <text x="50%" y="50%" fill="#eceeef" dy=".3em"
                                                text-anchor="middle">Thumbnail</text>
                                        </svg>
                                    `}
                                    <div class="position-absolute top-0 end-0 m-2">
                                        ${badgeHtml}
                                    </div>
                                    <div class="position-absolute top-0 start-0 m-2">
                                        <span class="badge bg-dark fs-6 px-3 py-2">
                                            ${deal.category}
                                        </span>
                                    </div>
                                </div>
                            </a>
                            <div class="card-body">
                                <h5 class="card-title">${deal.title}</h5>
                                <p class="card-text">${deal.description}</p>
                                <div class="d-flex justify-content-between align-items-center">
                                    <div class="btn-group">
                                        <a href="/deals/${deal._id}" class="btn btn-sm btn-outline-secondary">View</a>
                                    </div>

                                    <div class="d-flex align-items-center">
                                        <form action="/deals/${deal._id}/vote" method="POST" class="d-inline">
                                            <input type="hidden" name="direction" value="up">
                                            <button type="submit" class="btn btn-link p-0 text-decoration-none vote-btn">
                                                <i class="bi bi-caret-up-fill fs-5"></i>
                                            </button>
                                        </form>
                                        <span class="temperature ${tempClass}">
                                            ${deal.score}¬∞
                                        </span>
                                        <form action="/deals/${deal._id}/vote" method="POST" class="d-inline">
                                            <input type="hidden" name="direction" value="down">
                                            <button type="submit" class="btn btn-link p-0 text-decoration-none vote-btn">
                                                <i class="bi bi-caret-down-fill fs-5"></i>
                                            </button>
                                        </form>
                                    </div>

                                    <small class="text-muted">${timeAgo}</small>
                                </div>
                            </div>
                        </div>
                    </div>
                `;
                container.insertAdjacentHTML('beforeend', dealCard);
            });
        } catch (error) {
            console.error(error);
            container.innerHTML = '<div class="col-12 text-center text-danger"><p>Error loading deals. Please try again later.</p></div>';
        }
    });
</script>