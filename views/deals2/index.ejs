<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Deals (Fetch API)</h1>
</div>

<div id="loading" class="text-center">
    <div class="spinner-border" role="status">
        <span class="visually-hidden">Loading...</span>
    </div>
</div>

<div id="no-deals" class="text-center d-none">
    <p>No deals found.</p>
</div>

<div id="deals-container" class="album py-3 bg-light d-none">
    <div class="container">
        <div id="deals-row" class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
            <!-- Deals will be injected here -->
        </div>
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', () => {
        fetch('/deals/api/list')
            .then(response => response.json())
            .then(deals => {
                const loading = document.getElementById('loading');
                const noDeals = document.getElementById('no-deals');
                const dealsContainer = document.getElementById('deals-container');
                const dealsRow = document.getElementById('deals-row');

                loading.classList.add('d-none');

                if (!deals || deals.length === 0) {
                    noDeals.classList.remove('d-none');
                } else {
                    dealsContainer.classList.remove('d-none');
                    
                    deals.forEach(deal => {
                        const col = document.createElement('div');
                        col.className = 'col';
                        
                        const fallbackImage = "https://placehold.co/600x400/png?text=Brak+Zdjecia";
                        
                        let imageHtml = '';
                        if (deal.imageUrl) {
                            imageHtml = `
                                <img src="${deal.imageUrl}" 
                                    class="card-img-top" 
                                    width="100%" 
                                    height="225" 
                                    style="object-fit: cover;" 
                                    alt="${deal.title}"
                                    onerror="this.onerror=null; this.src='${fallbackImage}';"
                                >`;
                        } else {
                            imageHtml = `
                                <svg class="bd-placeholder-img card-img-top" width="100%" height="225" xmlns="http://www.w3.org/2000/svg" role="img" aria-label="Placeholder: Thumbnail" preserveAspectRatio="xMidYMid slice" focusable="false">
                                    <title>Placeholder</title>
                                    <rect width="100%" height="100%" fill="#55595c"></rect>
                                    <text x="50%" y="50%" fill="#eceeef" dy=".3em" text-anchor="middle">${deal.category}</text>
                                </svg>`;
                        }

                        let scoreBadge = '';
                        if (deal.score > 10) {
                            scoreBadge = '<span class="badge rounded-pill bg-danger">Hot üî•</span>';
                        } else if (deal.score < -10) {
                            scoreBadge = '<span class="badge rounded-pill bg-info text-dark">Cold ‚ùÑÔ∏è</span>';
                        } else {
                            scoreBadge = '<span class="badge rounded-pill bg-secondary">Neutral</span>';
                        }

                        col.innerHTML = `
                            <div class="card shadow-sm h-100">
                                <a href="/deals/${deal._id}" class="text-decoration-none text-dark">
                                    ${imageHtml}
                                </a>
                                <div class="card-body d-flex flex-column">
                                    <div class="d-flex justify-content-between align-items-start mb-2">
                                        <h5 class="card-title text-truncate" style="max-width: 70%;">
                                            <a href="/deals/${deal._id}" class="text-decoration-none text-dark">${deal.title}</a>
                                        </h5>
                                        <span class="badge bg-primary">${deal.category}</span>
                                    </div>

                                    <div class="mb-3">
                                        ${scoreBadge}
                                    </div>

                                    <div class="d-flex justify-content-between align-items-center mt-auto">
                                        <div class="btn-group" role="group" aria-label="Vote">
                                            <form action="/deals/${deal._id}/downvote" method="POST" class="d-inline">
                                                <button type="submit" class="btn btn-sm btn-outline-secondary rounded-start">
                                                    <i class="bi bi-dash-lg">-</i> 
                                                </button>
                                            </form>

                                            <button type="button" class="btn btn-sm btn-outline-secondary" disabled style="min-width: 40px;">
                                                <strong>${deal.score}</strong>
                                            </button>

                                            <form action="/deals/${deal._id}/upvote" method="POST" class="d-inline">
                                                <button type="submit" class="btn btn-sm btn-outline-secondary rounded-end">
                                                    <i class="bi bi-plus-lg">+</i>
                                                </button>
                                            </form>
                                        </div>

                                        <a href="/deals/${deal._id}" class="btn btn-sm btn-primary">Details</a>
                                    </div>
                                </div>
                            </div>
                        `;
                        dealsRow.appendChild(col);
                    });
                }
            })
            .catch(error => {
                console.error('Error fetching deals:', error);
                document.getElementById('loading').innerHTML = '<p class="text-danger">Error loading deals.</p>';
            });
    });
</script>
